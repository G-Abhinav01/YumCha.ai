{
    "version": 2,
    "builds": [
        {
            "src": "backend/server.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "backend/server.js"
        },
        {
            "src": "/images/(.*)",
            "dest": "frontend/images/$1"
        },
        {
            "src": "/audio/(.*)",
            "dest": "frontend/audio/$1"
        },
        {
            "src": "/(.*\\.(css|js))",
            "dest": "frontend/$1"
        },
        {
            "src": "/(.*)",
            "dest": "frontend/index.html"
        }
    ]
}